generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id          String   @id @default(uuid())
  title       String
  description String
  password    String?
  groups      Group[]
  quotes      Quote[]
}

model Group {
  id        String   @id @default(uuid())
  name      String
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id])
  items     Item[]
  posX      Int
  posY      Int
}

model Item {
  id          String   @id @default(uuid())
  name        String
  description String
  groupId     String
  group       Group    @relation(fields: [groupId], references: [id])
  image       Bytes?
}

model Quote {
  id        String   @id @default(uuid())
  text      String
  posX      Int
  posY      Int
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id])
}